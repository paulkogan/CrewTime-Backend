<form action = "{{postendpoint}}" method = "POST" id="change_work_status">

{{#if buildings}}
    {{#each buildings}}
         <div class="w3-panel w3-white w3-leftbar
          w3-rightbar w3-border-grey w3-margin-right w3-margin-left">

          <table width = "100%" border = 0>
                <colgroup>
                <col width="5%"/>
                <col width="20%"/>
                <col width="20%"/>
                <col width="20%"/>
                <col width="5%"/>
                </colgroup>



      <tr>
          <td align="center">{{id}}</td>
          <td align="left">{{name}}</td>

          <td align="center">
                  {{#if units}}

                  <table width = "100%" border = 0>
                  {{#each units}}
                    <tr>
                      <td>

                            {{#ifEqual unit_work_status 1}}
                                        <button
                                              type="submit"
                                              name="unitId"
                                              value="{{id}}"
                                              style="background-color:lightgreen; width:120px;"
                                          >{{name}}</button>


                            {{else}}
                                            <button
                                                  type="submit"
                                                  name="unitId"
                                                  value="{{id}}"
                                                  style="background-color:white; width: 120px;"
                                              >{{name}}</button>



                            {{/ifEqual}}

                   </td>
                      <td>
                          <a href = "/delete_unit/{{id}}">Del.Unit</a>
                      </td>
                    </tr>
                  {{/each}}
                 </table>
                   {{/if}}
          </td>


          <td align="center">
                <a href = '/updateproperty/{{id}}/'>Edit Property</a>
          </td>


          <td align="left">
                 <a href = "/delete_prop/{{id}}">Del. Property.</a>

           </td>
