          <td align="left"></td>
          <td align="left"><b>{{investor_name}}</b></td>


          <td align="center">
              {{t_wired_date}}
          </td>


          <td align="center">
                   {{#ifEqual t_own_adj 0}}
                            {{#ifLessThan t_amount 0}}
                                <font color = "red">
                                       {{formatted_amount}}
                                </font>
                            {{else}}
                                       {{formatted_amount}}&nbsp;
                            {{/ifLessThan}}
                  {{else}}
                        {{t_own_adj}}%
                  {{/ifEqual}}


            </td>

               <td>

               </td>

      </tr>
 </table>
</td></tr>


<tr>


