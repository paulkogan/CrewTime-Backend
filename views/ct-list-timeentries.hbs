<form action = "{{postendpoint}}" method = "POST" id="filter">



<table width = "100%" border = 0>

  <colgroup>
  <col width="30%"/>
  <col width="10%"/>
  <col width="30%"/>
  <col width="10%"/>
  <col width="20%"/>
  </colgroup>


<tr>
        <td>
              <font family = 'courier' size='5'><b>Crew-Time</b> - Review Time-Entries</font>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td align = "right">
                <a href = '/updateuser'>{{userObj.firstname}}</a>&emsp;<img width='50' src={{userObj.photo}}>
        </td>
</tr>

<tr>
      <td align = "left">
      <a href = "/">Home</a>&emsp;
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
</tr>

<tr>
        <td>

                > {{message}}
        </td>

        <td>Filter for: </td>
        <td>
              <select name="filter_id">

                  {{#ifEqual selectedWorker.id 0}}
                        <option selected disabled value> -- select worker to filter on-- </option>
                  {{else}}
                         <option selected value='{{selectedWorker.id}}'> {{selectedWorker.first}} {{selectedWorker.last}}</option>
                  {{/ifEqual}}


                  {{#each filterList}}
                        <option value='{{id}}'>{{first}} {{last}}</option>
                  {{/each}}
              </select>
        </td>
        <td align = "left"><button type="submit" form="filter">Filter</button></td>
        <td align = "center">
                  <a href = '/download_csv/{{selectedWorker.id}}'><img width="45" src = "../static/excel-logo-icon.png"><br>Download</a>
        </td>

</tr>
</table>
<br>
</div>



{{#if timeEntries}}
{{#each timeEntries}}
