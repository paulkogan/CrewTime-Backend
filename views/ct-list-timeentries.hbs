                        <col width="5%"/>
                        </colgroup>


                      <tr>
                          <td align="left">{{id}}</td>
                          <td align="left"><b>{{worker_name}}</b></td>
                          <td align="left">{{work_date}}</td>
                          <td align="left">{{property_name}}</td>
                          <td align="left">{{unit_name}}</td>
                          <td align="left">{{work_hours}} hrs</td>


                          <td align="left">

                          {{#ifEqual is_overtime 1}}
                                   OT
                          {{else}}
                                    REG
                          {{/ifEqual}}


                          </td>

                          <td align="left">{{date_stamp}}</td>
